<!--BLOGPOST INDEX-->
<% include ../partials/header %>

<section class="blogpostindexpage">
  <div class="blogpostindexintro greybackground">
    <div class="container">
      <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
          <h2>Sample's Blog.</h2>
        </div>
      </div>
      <div class="row">
        <div
          class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 blogpostintrotext"
        >
          <h6>
            This is sample Content
          </h6>
        </div>
      </div>
      <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
          <p>
            <a class="btn btn-primary btn-sm" href="/blogposts/new"
              >Add New Blog Post</a
            >
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <% blogposts.sort().reverse().forEach(function(blogpost){ %>
    <div class="row">
      <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-3">
        <a href="/blogposts/<%=blogpost._id %>"
          ><img class="img-fluid" src="<%= blogpost.image %>"
        /></a>
      </div>
      <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9 col-9">
        <h2><%=blogpost.name%></h2>
        <p><%- blogpost.description.substring(0, 200) %>...</p>
        <a class="btn btn-outline-primary" href="/blogposts/<%=blogpost._id %>"
          >Read More</a
        >
      </div>
    </div>
    <div class="row">
      <hr width="96%" />
    </div>
    <% }); %>
  </div>
</section>

<% include ../partials/footer %>
